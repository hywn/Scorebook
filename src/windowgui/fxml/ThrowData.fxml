<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="400" prefWidth="500" stylesheets="windowgui/Style.css"
	    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	    fx:controller="windowgui.controller.ThrowDataController">
	<children>
		<GridPane fx:id="menuItemLabels" layoutX="50" layoutY="100" prefHeight="500" prefWidth="600">
			<children>
				<Label text="Meet:"/>
				<Label fx:id="meetDetails" text="meet details" GridPane.columnIndex="1"
				       GridPane.rowIndex="0"/>

				<Label text="Event:" GridPane.rowIndex="1"/>
				<ComboBox fx:id="eventBox" promptText="None" GridPane.columnIndex="1"
					  GridPane.rowIndex="1"/>

				<Label text="Weather:" GridPane.rowIndex="2"/>
				<ComboBox fx:id="weatherBox" promptText="Sunny" GridPane.columnIndex="1"
					  GridPane.rowIndex="2"/>

				<Label text="Wind Level:" GridPane.rowIndex="3"/>
				<ComboBox fx:id="windBox" promptText="None" GridPane.columnIndex="1"
					  GridPane.rowIndex="3"/>

				<Label text="Round #:" GridPane.rowIndex="4"/>
				<ComboBox fx:id="roundBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

				<Label text="Throw #:" GridPane.rowIndex="5"/>
				<ComboBox fx:id="throwBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

				<Label text="Name:" GridPane.rowIndex="6"/>
				<ComboBox fx:id="autoBox" promptText="Athlete name"
					  GridPane.columnIndex="1" GridPane.rowIndex="6"/>

				<Label text="Distance (Feet):" GridPane.rowIndex="7"/>
				<TextField fx:id="feetField" promptText="0" GridPane.columnIndex="1"
					   GridPane.rowIndex="7"/>

				<Label text="Distance (Inches):" GridPane.rowIndex="8"/>
				<TextField fx:id="inchField" promptText="0" GridPane.columnIndex="1"
					   GridPane.rowIndex="8"/>

				<Button fx:id="enterButton" onAction="#enter" text="Enter" GridPane.columnIndex="1"
					GridPane.rowIndex="9"/>
			</children>
		</GridPane>
		<fx:include onMouseClicked="#goHome" source="HomeButton.fxml"/>
	</children>
</AnchorPane>

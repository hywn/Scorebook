<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="rootPane" prefHeight="600" prefWidth="500" stylesheets="windowgui/Style.css"
	    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	    fx:controller="windowgui.controller.MainMenuController">
	<children>
		<ImageView>
			<image>
				<Image url="@../MainMenu.png"/>
			</image>
		</ImageView>
		<GridPane fx:id="mainMenu" layoutX="50" layoutY="100" prefWidth="500" prefHeight="250">
			<children>
				<Button text="Record Data" onAction="#inputData"/>
				<Button text="Register a new Athlete" onAction="#registerAthlete"
					GridPane.columnIndex="1"/>
				<Button text="Register a new Meet" onAction="#registerMeet"
					GridPane.rowIndex="1"/>
				<Button text="View past data" onAction="#viewData"
					GridPane.columnIndex="1" GridPane.rowIndex="1"/>
				<Button text="About" onAction="#aboutPage"
					GridPane.rowIndex="2"/>
				<Button text="Exit" onAction="#exit"
					GridPane.columnIndex="1" GridPane.rowIndex="2"/>
			</children>
		</GridPane>
	</children>
</AnchorPane>
